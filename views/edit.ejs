<%- include('partials/head') -%>
<body>
  <%- include('partials/header') -%>
  <main class="edit">
    <h2 class="admin__heading">Edit your products</h2>

    <div class="container-create container-create--center">
      <form
        action="/admin/edit-product/<%= product._id %>?_method=PATCH"
        method="POST"
        class="container-create__form"
      >
        <label for="admin-dash-title">Title</label>
        <input
          type="text"
          id="admin-dash-title"
          name="title"
          maxlength="40"
          required
          value="<%= product.title %>"
        />
        <label for="admin-dash-description">Description</label>
        <input
          type="text"
          id="admin-dash-description"
          name="description"
          maxlength="150"
          value="<%= product.description %>"
          required
        />
        <label for="admin-dash-category">Category</label>
        <select id="admin-dash-category" name="category" class="form-input">
          <option value="fruit">Fruit</option>
          <option value="sweet">Sweet</option>
          <option value="vegan">Vegan</option>
          <option value="savory">Savory</option>
        </select>
        <label for="admin-dash-priceS">Small-size price</label>
        <input
          type="number"
          id="admin-dash-priceS"
          name="priceS"
          min="0"
          step="0.1"
          value="<%= product.priceS %>"
        />
        <label for="admin-dash-priceL">Large-size price</label>
        <input
          type="number"
          id="admin-dash-priceL"
          name="priceL"
          min="0"
          step="0.1"
          value="<%= product.priceL %>"
        />
        <button type="submit" class="btn btn--solid">Edit product</button>
      </form>
    </div>
  </main>

  <%- include('partials/footer') -%>
</body>
